<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header visuel moderne -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="32dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/logo"
                android:contentDescription="@string/app_name"
                android:background="@drawable/success_background"
                android:padding="16dp"
                android:elevation="8dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:letterSpacing="0.05"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="8dp" />

            <!-- Boutons sociaux modernes placés sous le header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/white">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/googleLoginButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/continue_google"
                    android:textSize="15sp"
                    android:drawableStart="@drawable/ic_google"
                    android:drawablePadding="10dp"
                    android:backgroundTint="@color/white"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:elevation="0dp"
                    android:padding="0dp" />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/white">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/githubLoginButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/continue_github"
                    android:textSize="15sp"
                    android:drawableStart="@drawable/ic_github"
                    android:drawablePadding="10dp"
                    android:backgroundTint="@color/white"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:elevation="0dp"
                    android:padding="0dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Séparateur OU -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:background="@color/gray_light" />
                <TextView
                    android:id="@+id/or_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/or_separator"
                    android:textColor="@color/accent"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="18dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:background="@color/gray_light" />
            </LinearLayout>
        </LinearLayout>

        <!-- Carte d'authentification moderne -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/accent"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/accent"
                    app:hintTextColor="@color/gray"
                    android:importantForAccessibility="yes"
                    android:hint="@string/email_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:importantForAccessibility="yes"
                        android:autofillHints="emailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mot de passe -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/accent"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/accent"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/accent"
                    app:hintTextColor="@color/gray"
                    android:importantForAccessibility="yes"
                    android:hint="@string/password_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword|textVisiblePassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:importantForAccessibility="yes"
                        android:autofillHints="password" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Affichage des erreurs de validation -->
                <TextView
                    android:id="@+id/loginErrorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/error"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:paddingBottom="8dp"
                    android:gravity="center" />

                <!-- Checkbox Se souvenir de moi -->
                <CheckBox
                    android:id="@+id/rememberMeCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remember_me"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="start" />

                <!-- Liens mot de passe oublié et création de compte -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:id="@+id/forgotPasswordTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:minWidth="96dp"
                        android:minHeight="48dp"
                        android:gravity="center"
                        android:text="@string/forgot_password"
                        android:textColor="@color/accent"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:background="@color/gray_light"
                        android:layout_marginHorizontal="8dp" />

                    <TextView
                        android:id="@+id/registerTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:minWidth="96dp"
                        android:minHeight="48dp"
                        android:gravity="center"
                        android:text="@string/register_button"
                        android:textColor="@color/accent"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <!-- Bouton de connexion -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="@string/login_button"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"
                    android:elevation="2dp"
                    android:layout_marginBottom="16dp" />

                <!-- ProgressBar pour chargement -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleLarge" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Séparateur moderne -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="1"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/or_separator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_separator"
                android:textColor="@color/accent"
                android:textSize="15sp"
                android:paddingHorizontal="18dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="1"
                android:background="@color/gray_light" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>