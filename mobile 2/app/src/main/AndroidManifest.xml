<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ScolabStudentApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScolabStudentApp"
        tools:targetApi="31">
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".ProjectDetailActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".TasksActivity" />
        <activity android:name=".DeliverablesActivity" />
        <activity android:name=".FeedbacksActivity" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".ProjectsActivity" />
        <activity android:name=".StudentDashboardActivity" />
        <activity android:name=".GitHubAuthActivity" />
    </application>

</manifest>
