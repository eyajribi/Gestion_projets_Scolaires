<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    android:fitsSystemWindows="true"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header visuel moderne -->

        <!-- Formulaire d'inscription -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="32dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/success_background"
                android:contentDescription="@string/app_name"
                android:elevation="8dp"
                android:padding="16dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:letterSpacing="0.05"
                android:text="@string/app_name"
                android:textColor="@color/primary"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/register_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/register_title"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/register_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/register_subtitle"
                android:textColor="@color/gray"
                android:textSize="14sp" />
            <!-- Boutons sociaux -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/google_register_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_google"
                    android:drawablePadding="10dp"
                    android:elevation="0dp"
                    android:padding="0dp"
                    android:text="@string/continue_google"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/github_register_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_github"
                    android:drawablePadding="10dp"
                    android:elevation="0dp"
                    android:padding="0dp"
                    android:text="@string/continue_github"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </com.google.android.material.card.MaterialCardView>
            <!-- Séparateur OU -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/or_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="18dp"
                    android:text="@string/or_separator"
                    android:textColor="@color/accent"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1.5dp"
                    android:layout_weight="1"
                    android:background="@color/gray_light" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Nom -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#757575"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="#757575"
                    app:hintTextColor="#757575"
                    android:hint="Nom *">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nom *"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        android:importantForAccessibility="yes"
                        android:contentDescription="Champ obligatoire : nom" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Prénom -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstname_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#757575"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="#757575"
                    app:hintTextColor="#757575"
                    android:hint="Prénom *">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstname_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Prénom *"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        android:importantForAccessibility="yes"
                        android:contentDescription="Champ obligatoire : prénom" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#757575"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="#757575"
                    app:hintTextColor="#757575"
                    android:hint="Adresse e-mail *">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Adresse e-mail *"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        android:importantForAccessibility="yes"
                        android:autofillHints="emailAddress"
                        android:contentDescription="Champ obligatoire : adresse e-mail" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Téléphone -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#757575"
                    app:startIconDrawable="@drawable/ic_phone"
                    app:startIconTint="#757575"
                    app:hintTextColor="#757575"
                    app:helperText="@string/phone_helper"
                    app:helperTextTextColor="#757575"
                    android:hint="Téléphone *">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Téléphone *"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        android:importantForAccessibility="yes"
                        android:contentDescription="Champ obligatoire : téléphone" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Faculté -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/faculty_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#757575"
                    app:startIconDrawable="@drawable/ic_school"
                    app:startIconTint="#757575"
                    app:hintTextColor="#757575"
                    android:hint="Faculté *">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/faculty_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Faculté *"
                        android:inputType="textCapWords"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        android:importantForAccessibility="yes"
                        android:contentDescription="Champ obligatoire : faculté" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Département -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/department_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#757575"
                    app:startIconDrawable="@drawable/ic_school"
                    app:startIconTint="#757575"
                    app:hintTextColor="#757575"
                    android:hint="Département *">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/department_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Département *"
                        android:inputType="textCapWords"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        android:importantForAccessibility="yes"
                        android:contentDescription="Champ obligatoire : département" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Niveau -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/level_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#757575"
                    app:startIconDrawable="@drawable/ic_school"
                    app:startIconTint="#757575"
                    app:hintTextColor="#757575"
                    android:hint="Niveau *">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/level_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Niveau *"
                        android:inputType="textCapWords"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        android:importantForAccessibility="yes"
                        android:contentDescription="Champ obligatoire : niveau" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Filière -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/field_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#757575"
                    app:startIconDrawable="@drawable/ic_school"
                    app:startIconTint="#757575"
                    app:hintTextColor="#757575"
                    android:hint="Filière *">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Filière *"
                        android:inputType="textCapWords"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        android:importantForAccessibility="yes"
                        android:contentDescription="Champ obligatoire : filière" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mot de passe avec contraintes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#757575"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="#757575"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#757575"
                    app:hintTextColor="#757575"
                    app:helperText="@string/password_helper"
                    app:helperTextTextColor="#757575"
                    app:helperTextEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_hint"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="#757575" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirmer mot de passe -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirm_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#757575"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="#757575"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#757575"
                    app:hintTextColor="#757575">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirm_password_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password_hint"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="#757575" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Modernisation du bouton d'inscription -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/register_button"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="@string/register_button"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/accent"
                    android:background="@drawable/button_primary"
                    android:textColor="@color/white"
                    android:elevation="2dp"
                    android:layout_marginBottom="24dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Lien vers connexion modernisé -->
        <TextView
            android:id="@+id/login_link"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="96dp"
            android:minHeight="48dp"
            android:gravity="center"
            android:text="@string/has_account"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>